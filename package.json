{
  "name": "electron-react-template",
  "version": "1.0.0",
  "description": "Personal template based off of secure-electron-template by reZach",
  "private": true,
  "main": "src/electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "audit-app": "npx electronegativity -i ./ -x LimitNavigationGlobalCheck,PermissionRequestHandlerGlobalCheck",
    "translate": "node src/localization/translateMissing.js",
    "dev-server": "cross-env NODE_ENV=development webpack serve --config ./webpack.development.js > dev-scripts/webpack-dev-server.log 2> dev-scripts/webpack-dev-server-error.log",
    "dev": "concurrently --success first \"node dev-scripts/prepareDevServer.js\" \"node dev-scripts/launchDevServer.js\" -k",
    "prod-build": "cross-env NODE_ENV=production npx webpack --mode=production --config ./webpack.production.js",
    "prod": "npm run prod-build && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run test && npm run prod-build && electron-builder",
    "test": "mocha"
  },
  "build": {
    "productName": "{Project Name}",
    "appId": "com.marshalldbrain.projectname",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "src/dist/**/*",
      "src/electron/**/*",
      "src/localization/!(locales)"
    ],
    "extraFiles": [
      "src/localization/locales/**/*",
      "license.data",
      "public.key"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "keywords": [
    "electron",
    "security",
    "secure",
    "template",
    "javascript",
    "react",
    "redux",
    "webpack",
    "i18n",
    "boilerplate"
  ],
  "homepage": "./",
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@doyensec/electronegativity": "^1.9.1",
    "@google-cloud/translate": "^6.2.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "csp-html-webpack-plugin": "^5.1.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-debug": "^3.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "mocha": "^8.4.0",
    "path-browserify": "^1.0.1",
    "spectron": "^15.0.0",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.2.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@loadable/component": "^5.15.0",
    "@reduxjs/toolkit": "^1.6.0",
    "bulma": "^0.9.3",
    "connected-react-router": "^6.9.1",
    "easy-redux-undo": "^1.0.4",
    "electron-devtools-installer": "^3.2.0",
    "i18next": "^20.3.1",
    "i18next-electron-fs-backend": "^1.3.6",
    "i18next-fs-backend": "^1.1.1",
    "lodash": "4.17.21",
    "lodash.merge": "^4.6.2",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.10.0",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "secure-electron-context-menu": "^1.3.1",
    "secure-electron-store": "^3.0.1"
  }
}
